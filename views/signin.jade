extends layout

block content
    h1= title
    if errorMessage
        p Error signing in: 
            span= errorMessage
    form(name="signin", action="/signin", method="post")
        input(type="text", name="username")
        input(type="password", name="password")
        input(type="submit", value="login")

    hr
    a(href="/signup") Sign up for an account.
